@model List<CartItem>

<h2>Your Shopping Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Amount</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Item.Title</td>
                    <td>@item.Amount</td>
                    <td>@item.Item.Price.ToString("C")</td>
                    <td>@((item.Amount * item.Item.Price).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <strong>Total:</strong>
        @Model.Sum(item => item.Amount * item.Item.Price).ToString("C")
    </div>
}
